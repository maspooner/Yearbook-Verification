<Window x:Class="YearbookVerify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YearbookVerify"
        mc:Ignorable="d"
        Title="Yearbook Spelling" Height="350" Width="525">
    <DockPanel>
        <Button Name="actionButton" DockPanel.Dock="Bottom" Click="actionButton_Click">Verify</Button>
        <RichTextBox DockPanel.Dock="Top" AllowDrop="False"/>
        <ScrollViewer DockPanel.Dock="Top">
			<TextBox Name="inputBox" AllowDrop="False" TextWrapping="Wrap" AcceptsReturn="True"/>
		</ScrollViewer>
	</DockPanel>
</Window>
