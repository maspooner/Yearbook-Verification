<Window x:Class="YearbookVerify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YearbookVerify"
        mc:Ignorable="d"
        Title="Yearbook Spelling" Height="550" Width="800" MinHeight="250" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
			<RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="2" Rows="1" Grid.Row="0">
            <ScrollViewer Name="view1" ScrollChanged="ScrollViewer_ScrollChanged" HorizontalScrollBarVisibility="Visible">
                <TextBox Name="inputBox" AcceptsReturn="True" FontSize="16"/>
            </ScrollViewer>
            <ScrollViewer Name="view2" ScrollChanged="ScrollViewer_ScrollChanged" HorizontalScrollBarVisibility="Visible">
                <TextBlock Background="LightGray" Name="outputBox" FontSize="16"/>
            </ScrollViewer>
        </UniformGrid>
        <UniformGrid Columns="2" Rows="1" Grid.Row="1">
            <Button Name="actionButton" Click="actionButton_Click">Verify</Button>
            <Button Name="reloadButton" Click="reloadButton_Click">Reload Name Database</Button>
        </UniformGrid>
    </Grid>
    
</Window>
